<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="0"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tv_count"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textAlignment="center"
            android:textStyle="bold" android:textSize="100sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark" app:layout_constraintVertical_bias="0.45"/>
    <Button
            android:text="@string/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_toast"
            app:layout_constraintTop_toBottomOf="@+id/tv_count" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.505"/>
    <Button
            android:text="@string/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_random" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_count" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_count" app:layout_constraintEnd_toStartOf="@+id/btn_random"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_toast" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_count"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>